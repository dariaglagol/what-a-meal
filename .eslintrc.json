{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "airbnb-typescript", "plugin:@next/next/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json",
        "import/extensions": [".js", ".jsx", ".ts", ".tsx"],
        "import/parsers": {
            "@typescript-eslint/parser": [".ts", ".tsx"]
        },
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "ignorePatterns": ["postcss.config.js"],
    "rules": {
        "react/jsx-filename-extension": "off",
        "import/extensions": 0
    }
}
